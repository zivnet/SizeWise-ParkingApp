<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Theme Typography -->
    <style name="TextAppearance.ParkingApp.BodyLarge" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextAppearance.ParkingApp.TitleLarge" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.ParkingApp.LabelSmall" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="itemIconTint">@drawable/bottom_nav_colors</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>
</resources>
